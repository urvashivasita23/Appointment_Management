<h4>Edit Appointment Information</h4>

<%= render partial: '/errors', locals: { record: @appointment } %>

<%= form_with url: appointment_create_path, model: [@appointment,@user], local: true do |f| %>
    <div>
        <b>Patient Name: </b><%= @appointment.patient.fullname %><br>
        <b>Doctor Name: </b><%= @appointment.doctor.fullname %><br>
    </div>

    <br>

    <div>
        <%= f.label :email, "Patient's Appointment" %>
        <%= f.text_field :email %>
    </div>

        
    <div>
        <%= f.label :appointment, "Appointment" %>
        <%= f.datetime_field :appointment %>
    </div>

    <div>
        <%= f.label :test_results, "Test Result" %>
        <%= f.text_area :test_results %>
    </div>

    <div>
        <%= f.label :treatment_plans, "Treatment Plans" %>
        <%= f.text_area :treatment_plans %>
    </div>

    <div>
        <%= f.label :prescriptions, "Prescriptions" %>
        <%= f.text_area :prescriptions %>
    </div>

    <div>
        <%= f.label :billing, "Billing" %>
        <%= f.number_field :billing, min: 0, step: 0.01 %>
    </div>

    <br>
    Appointment was created at <%= date_and_time(@appointment.created_at) %><br>
    Appointment updated at <%= date_and_time(@appointment.updated_at) %><br>
    <br>

    <div>
        <%= f.submit "Update Appointment", class: "waves-effect waves-light btn" %>
    </div>
<% end %>
<br>
<%= link_to "Back to Patient's Profile", doctor_user_path(@appointment.patient.user), class: "waves-effect waves-light btn" %>
<br><br>
<%= link_to "Back to Doctor's Profile", doctor_user_path(@appointment.doctor.user), class: "waves-effect waves-light btn" %>
<br><br>

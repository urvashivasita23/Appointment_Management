<h1> Reset Your Password </h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.text_field :password, class: "form-control", placeholders: "password" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.text_field :password_confirmation, class: "form-control", placeholders: "password confirmation" %>
    </div>
    <div>
        <%= form.submit "Reset password", class: "btn btn-primary" %>
    </div>
<% end %>
